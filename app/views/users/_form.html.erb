<%= form_with(model: user, local: true) do |form| %>
  <% if user.errors.any? %>
    <%= errors_for(user) %>
    <br />
  <% end %>
  <div class="form-group">
    <%= form.label :email do %>
      Email
      <a style="color: red;"> *</a>
    <% end %>
    <%= form.text_field :email, id: :user_email, class: "form-control" %>
  </div>
  <% if current_user == user %>
    <div class="form-group">
      <%= form.label :password do %>
        Password
        <a style="color: red;"> *</a>
      <% end %>
      <%= form.password_field :password, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= form.label :password_confirmation do %>
        Password Confirmation
        <a style="color: red;"> *</a>
      <% end %>
      <%= form.password_field :password_confirmation, class: "form-control" %>
    </div>
  <% end %>
  <% if current_user.admin? %>
    <div class="form-check">
      <label class="form-check-label">
        <%= form.check_box :admin, class: "form-check-input" %>
        Admin
      </label>
    </div>
  <% end %>
  <div class="btn-group float-right" role="group">
    <%= link_to 'Back', users_path, class: 'btn btn-outline-secondary' %>
    <%= form.submit 'Submit', class: "btn btn-primary" %>
  </div>
<% end %>
