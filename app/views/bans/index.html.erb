<div class="field is-grouped is-pulled-right">
  <p class="control">
    <% if current_user.admin? %>
      <%= link_to "Audit Log", audit_log_bans_path, class: "button button is-outline"%>
    <% end %>
  </p>
  <p class="control">
    <%= link_to fa_icon('plus', text: 'New Ban', class: "fa-fw"), new_ban_path, class: "button is-outline is-primary" %>
  </p>
</div>


<h2>Bans</h2>

<table class="table">
  <thead>
    <tr>
      <th>Type</th>
      <th>Value</th>
      <th colspan="1" style="width: 1px; border-top: none;"></th>
    </tr>
  </thead>
  <tbody>
    <% @bans.each do |ban| %>
      <tr>
        <td><%= ban.ban_type %></td>
        <td><%= ban.ban_value %></td>
        <td>
          <div class="field is-grouped is-pulled-right">
          <p class="control">
            <%= link_to fa_icon('pencil'), edit_ban_path(ban), class: "button is-outline is-small" %>
          </p>
          <p class="control">
            <%= link_to fa_icon('trash'), ban, method: :delete, data: { confirm: 'Are you sure?' }, class: "button is-outline is-small" %>
          </p>
        </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= render 'shared/pagination', items: @bans %>
