<%= form_with(model: request, local: true) do |form| %>
  <% if request.errors.any? %>
    <%= errors_for(request) %>
    <br />
  <% end %>
  <div class="form-group">
    <%= form.label :email do %>
      Email
      <a style="color: red;"> *</a>
    <% end %>
    <%= form.text_field :email, id: :request_email, class: "form-control" %>
  </div>
  <div class="form-group">
  <%= form.label :reason do %>
      Reason
      <% if Request.reason_required? %>
        <a style="color: red;"> *</a>
      <% end %>
    <% end %>
    <%= form.text_area :reason, id: :request_reason, class: "form-control" %>
  </div>
  <%= form.submit 'Submit', class: "btn btn-primary" %>
<% end %>
